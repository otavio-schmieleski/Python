<TelaLabel>
    FloatLayout:

        # altera o tamanho da Fonte
        Label:
            text:'HELLO WORD'
            size_hint: .5,.5
            pos_hint: {"y": .70, "center_x": .5}

            # font_size determina o tamnho da font
            font_size: 75

        # Altera a fonte de texto
        Label:
            text:'HELLO WORD'
            size_hint: .5,.5
            pos_hint: {"y": .60, "center_x": .5}

            # font_name determina a fonte de texto
            font_name: "consola"
        
        # Deixa o texto em Negrito
        Label:
            text:'HELLO WORD'
            size_hint: .5,.5
            pos_hint: {"y": .50, "center_x": .5}

            # bold = negrito 
            bold: True
        
        # Deixar o texto em Italico
        Label:
            text:'HELLO WORD'
            size_hint: .5,.5
            pos_hint: {"y": .40, "center_x": .5}

            # italic = italico 
            italic: True

        # Altera a cor do texto
        Label:
            text:'HELLO WORD'
            size_hint: .5,.5
            pos_hint: {"y": .30, "center_x": .5}

            # color = cor 
            color: .1 , .2 , .3 , 1

        # Desabilita o label
        Label:
            text:'HELLO WORD'
            size_hint: .5,.5
            pos_hint: {"y": .20, "center_x": .5}
            
            # disable = disabilitar
            disable: True
        
        # Altera um texto com varias linhas
        Label:
            text:"aaa bbb ccc aaa bbb ccc aaa bbb ccc aaa bbb ccc"

            size_hint: .5,.5
            pos_hint: {"y": .10, "center_x": .5}
            
            # espacamento entre as linhas
            line_height: 2
